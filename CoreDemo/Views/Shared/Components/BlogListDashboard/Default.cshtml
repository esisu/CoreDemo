@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Status </th>
                                <th> Düzenle </th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="/WebWriter/assets/images/faces/face4.jpg" class="mr-2" alt="image"> @item.BlogId
                                </td>
                                <td> @item.BlogTitle </td>
                                <td>
                                    <label class="badge badge-gradient-danger">@item.Category.CategoryName</label>
                                </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MM-yyyy")) </td>
                                <td> @item.BlogStatus </td>
                                <td> <a href="/Blog/BlogReadAll/@item.BlogId" target="_blank" class="btn btn-inverse-dark">Detaylar</a> </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>