@model Message2
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detay Sayfası</h4>
                <br/>
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.MessageId)
                    <div class="form-group">
                        <label for="exampleInputName1">mesaj konusu</label>
                        @*<input type="text" class="form-control" id="exampleInputName1" name="@Model.WriterName" placeholder="Name">*@
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Detay</label>
                        @Html.TextBoxFor(x => x.Details, new { @class = "form-control" })
                    </div>
                <td><a href="/Message/Inbox" class="btn btn-outline-warning btn-fw">Mesajlara DÖn</a></td>
                </form>
            </div>
        </div>
    </div>
